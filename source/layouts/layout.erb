<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>

    <%= stylesheet_link_tag "style" %>
    <%= javascript_include_tag  "script" %>
    <script type="text/javascript" src="//use.typekit.net/sol4hnp.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  </head>

  <body class="<%= page_classes %>">
    <%= partial "partials/svg" %>
    <%= partial "partials/form" %>
    <%= partial "partials/output" %>
    <article class="specimen">
      <div class="contain">
        <div class="tabs">
          <a href="#about" class="tab active">About</a>
          <a href="#specimen" class="tab">Specimen</a>
          <a href="#code" class="tab">Code</a>
        </div>

    <%= yield %>

    <%= partial "partials/specimen" %>
  </body>
</html>