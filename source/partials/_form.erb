<section class="form panel" data-panel="form">
  <h1 class="logo">modularscale</h1>
  <form id="form">
    <div class="bases">
      <h6 class="label">Bases</h6>

      <div id="formBases">
        <input type="text" class="base" value="1em" step="1" onkeyup="changeBase(this)">
      </div>

      <a class="button-pm add" href="javascript:addBase()">
        <svg class="svg-pm" viewBox="0 0 15 15">
          <use xlink:href="#add"></use>
        </svg>
      </a>
      <a class="button-pm remove" href="javascript:removeBase()">
        <svg class="svg-pm" viewBox="0 0 15 15">
          <use xlink:href="#add"></use>
        </svg>
      </a>
    </div>

    <h6 class="label">Ratios</h6>
    <div class="ratios">

      <div id="formRatios">
        <input type="number" class="ratio" min="1.01" value="1.3" step="0.01" onkeyup="changeRatio()">
      </div>

      <a class="button-pm add" href="javascript:addRatio()">
        <svg class="svg-pm" viewBox="0 0 15 15">
          <use xlink:href="#add"></use>
        </svg>
      </a>
      <a class="button-pm remove" href="javascript:removeRatio()">
        <svg class="svg-pm" viewBox="0 0 15 15">
          <use xlink:href="#add"></use>
        </svg>
      </a>

    </div>
  </form>

  <div class="calculator-selection tabs">
    <a href="#web" class="calculator-lang tab active">Web</a>
    <a href="#sass" class="calculator-lang tab">Sass</a>
    <a href="#js" class="calculator-lang tab">JS</a>
  </div>

  <h6 class="label code">Sass settings</h6>

<textarea id="ms-settings" onClick="this.select();">msBase: 1em;
msRatio: 1.3;</textarea>

  <a href="https://github.com/Team-Sass/modular-scale" target="_blank" class="code-install">Install the Sass plugin</a>

